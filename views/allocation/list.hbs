<div class="container-fluid">
    <div class="row">
        <div class="col" style="padding-top: 10px;">
            <a class="home-icon" href="/admin-desk" style="float: left;"><i class="fa fa-home"></i></a>
        </div>
    </div>
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-10 col-md-10 col-lg-10"
            style="background-color: #fff;margin-top: 3%;margin-bottom:3%;padding:25px;border-radius:6px;">
            <h3>
                Allocations<a class="btn btn-dark" href="/allocation/addOrUpdate" style="float: right;">Add&nbsp;<i
                        class="fa fa-plus"></i></a>
            </h3><br />
            <div class="table-responsive-sm table-responsive-md table-responsive-lg">
                <table class="table table-striped">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col" style="width:5%;">Sr.No.</th>
                            <th scope="col">Teacher</th>
                            <th scope="col">Batch</th>
                            <th scope="col">Subject</th>
                            <th scope="col" style="width:12%;">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each list}}
                        <tr>
                            <td>{{inc @index}}</td>
                            <td>{{this.teacher.teacherId}} : {{this.teacher.fullName}}</td>
                            <td>{{this.batch.batchId}} : {{this.batch.batchYear}} Year</td>
                            <td>{{this.subject.subjectId}} : {{this.subject.subjectName}}</td>
                            <td class="d-flex justify-content-around">
                                <a href="/allocation/addOrUpdate/{{this._id}}" onclick="return confirm('Warning! This might result in loss of Data.\n Are you sure to update this allocation ?');"><i class="fa fa-pencil fa-lg"
                                        aria-hidden="true"></i></a>
                                &nbsp;&nbsp;
                                <a href="/allocation/delete/{{this._id}}"
                                    onclick="return confirm('Warning! This might result in loss of Data.\n Are you sure to delete this record ?');"><i
                                        class="fa fa-trash fa-lg" aria-hidden="true" style="color: red;"></i></a>
                            </td>
                        </tr>
                        {{else}}
                        <tr>
                            <td colspan="5" class="text-center">No data available</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>