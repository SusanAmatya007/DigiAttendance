<div class="container-fluid">
    <div class="row">
        <div class="col" style="padding-top: 10px;">
            {{#if errorExists}}
            <div class="alert alert-warning alert-dismissible fade show" role="alert" style="position: absolute;top:10px;right:10px;max-width: 380px;z-index:1;">
                <strong>{{errorExists}}</strong>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            {{/if}}
        </div>
    </div>
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-6 col-md-6 col-lg-6" style="margin-top: 4.5%;">
            <div class="d-flex justify-content-center align-items-center shadow-content">
                <img src="/assets/favicon.ico" style="width: 110px;" alt="logo"/>
                <h2 class="text-center" style="color:#fff;padding-top:30px;">&nbsp;&nbsp;DigiAttendance </h2>
            </div>
        </div>
    </div>
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-5 col-md-5 col-lg-5" style="background-color: #fff;margin-top: 3%;padding:25px;border-radius:6px;">
            <h3 class="text-center">{{formTitle}}&nbsp;&nbsp;<i class="fa fa-sign-in"></i></h3>
            <hr>
            <form action="/login" method="POST" autocomplete="off">
                <div class="form-group">
                    <label>Teacher ID</label>
                    <input type="text" class="form-control" name="teacherId" placeholder="Teacher ID" value="{{teacherId}}" required>
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" name="password" placeholder="Password" value="" required>
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-success" style="padding-left: 30px;padding-right:30px;">Login</button>
                </div>
            </form>
        </div>
    </div>
</div>