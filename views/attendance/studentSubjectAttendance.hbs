<div class="container-fluid">
    <div class="row">
        <div class="col" style="padding-top: 10px;">
            <a class="home-icon" href="/teacher-desk" style="float: left;"><i class="fa fa-home"></i></a>
        </div>
    </div>
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-8 col-md-8 col-lg-8"
            style="background-color: #fff;margin-top: 3%;margin-bottom:3%;padding:25px;border-radius:6px;">
            <div class="d-flex justify-content-between">
                <div>
                    <h3 style="margin-top: 4px;margin-bottom: 4px;">Attendance Details</h3>
                    <br/>
                    <h4 style="margin-top: 4px;margin-bottom: 4px;">ID : {{student.studentId}}&nbsp;&nbsp;&nbsp;&nbsp;Student Name : {{student.studentName}}</h4>
                    <h6 style="margin-top: 4px;margin-bottom: 4px;">DateOfBirth : {{student.dateOfBirth}}&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Mobile : {{student.mobile}}&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Email : {{student.email}}</h6>
                    <br/>
                    <h6 style="margin-top: 4px;margin-bottom: 4px;">{{batch.batchId}} : {{batch.batchName}} : Sec-{{batch.batchSection}} : Year {{batch.batchYear}}</h6>
                    <h6 style="margin-top: 4px;margin-bottom: 4px;">{{subject.subjectId}} : {{subject.subjectName}}</h6>
                </div>
            </div>
            <div class="d-flex justify-content-between">
                <div style="width: 100%;">
                    <h5 style="margin-top: 10px;margin-bottom: 2px;">Total Attendance : {{totalPresent}} / {{totalWorkingDays}}&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Attendance Percentage : {{totalPercentAttendance}} %</h5>
                </div>
            </div>
            <br />
            <div class="table-responsive-sm table-responsive-md table-responsive-lg">
                <table class="table table-striped">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Date</th>
                            <th scope="col">Atendance Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each attendanceArray}}
                        <tr>
                            <td>{{this.attendanceDate}}</td>
                            <td>{{this.attendanceStatus}}</td>
                        </tr>
                        {{else}}
                        <tr>
                            <td colspan="2" class="text-center">No data available</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>