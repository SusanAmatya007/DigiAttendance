<div class="container-fluid">
    <div class="row">
        <div class="col" style="padding-top: 10px;">
            <a class="home-icon" href="/admin-desk" style="float: left;"><i class="fa fa-home"></i></a>
        </div>
    </div>
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-10 col-md-10 col-lg-10"
            style="background-color: #fff;margin-top: 3%;margin-bottom:3%;padding:25px;border-radius:6px;">
            <h3>
                Batches<a class="btn btn-dark" href="/batch/addOrUpdate" style="float: right;">Add&nbsp;<i
                        class="fa fa-plus"></i></a>
            </h3><br />
            <div class="table-responsive-sm table-responsive-md table-responsive-lg">
                <table class="table table-striped">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Batch ID</th>
                            <th scope="col">Batch Name</th>
                            <th scope="col">Section</th>
                            <th scope="col">Year</th>
                            <th scope="col">Subjects</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each list}}
                        <tr>
                            <td>{{this.batchId}}</td>
                            <td>{{this.batchName}}</td>
                            <td>{{this.batchSection}}</td>
                            <td>{{this.batchYear}}</td>
                            <td>
                                {{#if this.subjects}}
                                {{this.subjects}}
                                {{else}}
                                ---
                                {{/if}}
                            </td>
                            <td class="d-flex justify-content-around">
                                <a href="/batch/addOrUpdate/{{this._id}}"><i class="fa fa-pencil fa-lg"
                                        aria-hidden="true"></i></a>
                                &nbsp;&nbsp;
                                <a href="/batch/delete/{{this.batchId}}"
                                    onclick="return confirm('Are you sure to delete this record ?');"><i
                                        class="fa fa-trash fa-lg" aria-hidden="true" style="color: red;"></i></a>
                            </td>
                        </tr>
                        {{else}}
                        <tr>
                            <td colspan="6" class="text-center">No data available</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>